{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}
{% extends "base.html.twig" %}

{% block login %} 
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    
{% endif %}

<form action="{{ path('login') }}" method="post" style="width: 100%; height: 200px; display:flex; justify-content:center; align-items:center; flex-direction:column; row-gap: 10px; margin-top: 20px">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}"/>

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password"/>

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        #}
        <input type="hidden" name="_target_path" value="/"/>

    <button type="submit" style="background-color: rgb(185, 152, 110); color:white; border-radius:10px; border: none; font-weight: 600;">login</button>
    
    <a href="{{ path('user_registration') }}" style="color: black;">If you're not register click here</a>
</form>
{% endblock %}